; Available tokens:
;   %percentage% (default
label-muted = ﱝ   %percentage%%
label-muted-foreground = ${color.fg-alt}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 

