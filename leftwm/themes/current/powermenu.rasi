configuration {
  font:                "Iosevka Nerd Font 10";
  show-icons:          true;
  icon-theme:          "Papirus";
  display-drun:        "î§Œ";
  drun-display-format: "{name}";
  disable-history:     false;
  fullscreen:          false;
  hide-scrollbar:      true;
  sidebar-mode:        false;
}

* {
  al:   #00000000;
  bg:   #1F1F1FFF;
  bga:  #313131FF;
  fg:   #F5F5F5FF;
  ac:   #00000066;
}
